<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@color/colorFamilyCard"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".bastard.FindTheBastardActivity"
    tools:showIn="@layout/bastard_header_fragment">
    <fragment
        android:id="@+id/timer_fragment_header"
        android:name="com.cmora.froglab_2.tools.TimerFragment"
        android:layout_width="fill_parent"
        android:layout_gravity="left|center_vertical"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="2" />
    <fragment
        android:id="@+id/points_fragment_header"
        android:name="com.cmora.froglab_2.tools.PointsFragment"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="1" />
</LinearLayout>