<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/punnet_main_layout"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/cardview_light_background"
    android:gravity="center"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".punnet.PunnetActivityMain"
    tools:showIn="@layout/punnet_main_layout">
    <fragment
        android:id="@+id/punnet_fragment_header_main"
        android:name="com.cmora.froglab_2.tools.HeaderFragment"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />
    <fragment
        android:id="@+id/punnet_fragment_question"
        android:name="com.cmora.froglab_2.punnet.PunnetQuestionFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />
    <View style="@style/Divider"
        android:layout_height="7dp"
        android:background="@color/colorFamilyCard"/>
    <fragment
        android:id="@+id/punnet_fragment_main"
        android:name="com.cmora.froglab_2.punnet.PunnetFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />
</LinearLayout>
