<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmora.froglab_2">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--service android:name="com.cmora.froglab_2.services.BlueToothService" android:enabled="true"/-->

        <activity android:name="com.cmora.froglab_2.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--category android:name="android.intent.category.LAUNCHER" /-->
            </intent-filter>
        </activity>
        <activity android:name="com.cmora.froglab_2.laboratory_use_case.Juego"
            android:label="Juego"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme"
            />
        <activity android:name="com.cmora.froglab_2.AboutActivity"
            android:label="About"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme"
            />
        <activity android:name="com.cmora.froglab_2.PointsActivity"
            android:label="Points"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme"
            />
        <activity android:name="com.cmora.froglab_2.HelpActivity"
            android:label="Database"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme"
            />
        <activity android:name="com.cmora.froglab_2.database.DatabaseActivity"
            android:label="Database"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme"
            />
        <activity android:name="com.cmora.froglab_2.PreferencesActivity"
            android:label="Preferences"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme"/>

        <activity android:name="com.cmora.froglab_2.bastard.FindTheBastardActivity"
            android:label="FindTheBastard"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme"/>

